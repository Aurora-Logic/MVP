{
  "name": "proposalkit",
  "version": "3.0.0",
  "private": true,
  "description": "Professional proposal builder â€” vanilla HTML/CSS/JS",
  "scripts": {
    "build:tiptap": "esbuild assets/js/vendor/tiptap-entry.mjs --bundle --format=iife --minify --outfile=assets/js/vendor/tiptap.bundle.js",
    "lint": "eslint assets/js/",
    "lint:fix": "eslint assets/js/ --fix",
    "format": "prettier --write 'assets/**/*.{js,css}' '*.html'",
    "format:check": "prettier --check 'assets/**/*.{js,css}' '*.html'",
    "validate": "FAIL=0; for f in assets/js/core/*.js assets/js/views/*.js assets/js/editor/*.js assets/js/export/*.js assets/js/boot.js; do node -c \"$f\" 2>&1 || FAIL=1; done; [ $FAIL -eq 0 ] && echo 'All JS valid' || exit 1",
    "test": "npx playwright test",
    "test:e2e": "npx playwright test",
    "serve": "npx serve . -l 3000 -s"
  },
  "repository": {
    "type": "git",
    "url": "git@github-work:Virag15/MVP.git"
  },
  "type": "module",
  "author": "Delta System",
  "license": "UNLICENSED",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "^1.50.0",
    "@tiptap/core": "^2.27.2",
    "@tiptap/extension-bubble-menu": "^2.27.2",
    "@tiptap/extension-highlight": "^2.27.2",
    "@tiptap/extension-link": "^2.27.2",
    "@tiptap/extension-placeholder": "^2.27.2",
    "@tiptap/extension-table": "^2.27.2",
    "@tiptap/extension-table-cell": "^2.27.2",
    "@tiptap/extension-table-header": "^2.27.2",
    "@tiptap/extension-table-row": "^2.27.2",
    "@tiptap/extension-task-item": "^2.27.2",
    "@tiptap/extension-task-list": "^2.27.2",
    "@tiptap/extension-underline": "^2.27.2",
    "@tiptap/pm": "^2.27.2",
    "@tiptap/starter-kit": "^2.27.2",
    "esbuild": "^0.27.3",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.0.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.0",
    "serve": "^14.0.0"
  }
}
